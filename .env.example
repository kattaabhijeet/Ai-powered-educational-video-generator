# OpenAI API Key (required for script generation)
# For OpenRouter, use your OpenRouter API key
OPENAI_API_KEY=your_openrouter_api_key_here

# Model selection - using OpenRouter's free model
OPENAI_MODEL=openai/gpt-oss-120b:free
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# TTS settings (optional - can use free gTTS instead)
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
